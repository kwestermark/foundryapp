<!--================ Users/show ================== -->
<table class="table user_table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Admin?</th>
        <th colspan="4"></th>
      </tr>
    </thead>
        <tr>
          <td><%= @user.first_name %></td>
          <td><%= @user.last_name %></td>
          <td><%= @user.email %></td>
          <td>
            <% if @user.admin == true %>
              yes
            <% else %>
              no
            <% end %>
          </td>
          <% if signed_in? && current_user.admin? %>
          <td><%= link_to edit_user_path(@user) do %><span><i class="fa fa-pencil" aria-hidden="true"></i></span> <% end %></td></td>
          <td><%= link_to @user, method: :delete, data: { confirm: 'Are you sure?' } do%><span><i class="fa fa-trash" aria-hidden="true"></i></span> <% end %></td><% end %>
        </tr>
      </table>
    </div><!-- end col -->
    <div class="col-md-12 controls">
      <%= link_to 'Back', users_path %>
    </div><!-- end controls -->
  </div><!-- end row -->
</div><!-- end container -->