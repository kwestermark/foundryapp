<div class="layout-users">
  <p id="notice"><%= notice %></p>
  <h1>Users</h1>

  <table class="table user_table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td></td>
          <td><%= link_to user do  %><span><i class="fa fa-eye" aria-hidden="true"></i></span> <% end %></td>
          <td><%= link_to edit_user_path(user) do %><span><i class="fa fa-pencil" aria-hidden="true"></i></span> <% end %></td></td>
          <td><%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %><span><i class="fa fa-trash" aria-hidden="true"></i></span> <% end %></td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New User', new_user_path %>
</div>