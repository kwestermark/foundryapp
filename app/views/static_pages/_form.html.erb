

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-centered">
      <div class="panel panel-default">
        <div class="panel-heading" >
          <h1>Contact Us</h1>
        </div>

  <%= flash[:notice] %>
  <%= form_tag("/static_pages/thank_you") do %>

  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
     <span class="input-group-addon"><i class="glyphicon glyphicon-comment"></i></span>
     <%= label_tag :message %>
     <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message"%>
    </div>
  </div>

  <div class="send-button">
    <%= submit_tag "Send", class: "btn btn-info contact_button" %>
    <% end %>
  </div>
      </div>
    </div>
  </div>
</div>
</div>

       
    

