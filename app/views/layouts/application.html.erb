<!DOCTYPE html>
<html>
<head>
  <title>Orbit Bike Shop</title><%= csrf_meta_tags %>

  <meta content="width=device-width, initial-scale=1" name="viewport">
  
  <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
<!-- Custom CSS -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<!-- JS -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<!-- Bootstrap core JS -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
  
</head>
<body class="anchor-top">

  <% if notice %>
    <p id="notice" class="alert alert-info"><%= notice %></p>
<% end %>

<% if alert %>
    <p id="alert" class="alert alert-info"><%= alert %></p>
<% end %>

  <!-- Fixed navbar -->
<nav class="navbar navbar-default" role="navigation">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>    
  </div>
  <!-- Nav links, forms, and other content for toggling -->
  <div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
      <li>  <%= link_to "Bike Shop", root_path , class: "navbar-brand" %></li></ul>
    <ul class="nav navbar-nav navbar-center">
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Products', products_path %></li>
      <li><%= link_to 'About', static_pages_about_path %></li>
      <li><%= link_to 'Contact', static_pages_contact_path %>
      <li><%= link_to 'Users', users_path %></li>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
           <li> <%= render 'devise/menu/user_nav' %>
            </li></ul>
       <ul class="nav navbar-nav navbar-right"></ul></div>
     <!-- Search Box -->
         <form class="form-inline">
          <%= form_tag("/products", method: "get", class:"navbar-form navbar-right") do %> 
          <%= label_tag(:q, "Search for:", class:"hidden") %>
          <%= text_field_tag(:q, "", type:"text", class:"form-control", placeholder:"Search") %> 
          <%= button_tag raw("<i class='srch-control-icon-srch'></i> search"), class: "button round" %> 
        </form></li></ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  <% end %>
<%= yield %>

 <!--Footer Section -->
  <footer>
  <div class="footer">
    <div class="container-fluid">
      <h4 class="_14">Follow me on</h4>
    <ul class="social-icons">
        <li><a href="https://www.facebook.com/kristina.westermarktaylor" class="social-icon"> <i class="fa fa-facebook"></i></a></li>
        <li><a href="https://twitter.com/kwestermark1" class="social-icon"> <i class="fa fa-twitter"></i></a></li>
        <li><a href="https://www.linkedin.com/in/kristinawestermarktaylor/" class="social-icon"> <i class="fa fa-linkedin"></i></a></li>
    </ul>
    <p> &copy; Web Development by Kristina R. Taylor 2017</p>
  </div>
</div>
</footer>

  <!--End Footer Section -->
  </body>
</html>