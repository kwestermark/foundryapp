<section>
  <div class="show">
    <p id="notice"><%= notice %></p>
    <div class="row" id="header-title" data-product-id="<%= @product.id %>"><%= @product.name %></p>
      </div>
    </div>
    <div class="container">
    <div class="content-wrapper"> 
    <div class="item-container">  
      <div class="container"> 
        <div class="col-md-12">
          <div class="product col-md-6 service-image-left">
            <center>
               <div class="thumbnail">
                <% if @product.image_url.present? %>
                  <%= image_tag(@product.image_url, class: "img-responsive img-zoom thumbnail", data_zoom_image: @product.image_url) %>
                    </center>
                  </div>
        <% end %>

        <div class="product-info">
          <div class="col-md-6 col-lg-5 column">

          <% cache @product do %>

          <div class="product-desc"><p><strong>Description:</strong>
          <%= @product.description %></p></div>

          <div class="product-color"><p><strong>Color:</strong>
          <%= @product.color %></p></div>

          <div class="product-price"><p><strong>Price:</strong>
          $<%= @product.price %>.00</p></div>

          <div class="product-rating"><p><strong>Comments:</strong>
          <%= @product.highest_rating_comment %></div>

            <%= link_to 'Edit', edit_product_path(@product)%>
            <%= link_to 'Back', products_path%>

<% end %> <!-- caching -->

 <br />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</section>
