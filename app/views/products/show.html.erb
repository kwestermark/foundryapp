<section>
  <div class="show">
    <p id="notice"><%= notice %></p>
    <div class="row" data-product-id="<%= @product.id %>">
      <div class="col-lg-1">

      </div>
        <div class="col-lg-5">
          <hgroup>
            <%= @product.name %>
          </hgroup>
        <figure>
        <% if @product.image_url.present? %>
          <%= image_tag(@product.image_url, class: "img-responsive img-zoom", data_zoom_image: @product.image_url, style: "width: 60%;") %>
        </figure>
        <% end %>

        <div class="product-info">

          <% cache @product do %>

            <p>
              <strong>Description:</strong>
              <%= @product.description %>
            </p>

            <p>
              <strong>Color:</strong>
              <%= @product.color %>
            </p>

            <p>
              <strong>Price:</strong>
              $<%= @product.price %>
            </p>
            <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-default' %>
            <%= link_to 'Back', products_path, class: 'btn btn-default'  %>

 <% end %> <!-- caching -->

 <br />

</div>
</div>
</div>
</section>
