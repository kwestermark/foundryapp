    <div class="card"
      <div class="container">
        <div class="row">
          <div class="preview col-md-6">
            <p id="notice"><%= notice %></p>
            <%= link_to 'Back', products_path %>
      
          <div class="preview-pic tab-content">
              <div class="tab-pane active" id="pic-1"><%= image_tag @product.image_url, class: 'img-responsive' %></div>
              <div class="tab-pane" id="pic-2"><%= image_tag @product.image_url, class: 'img-responsive' %></div>
              <div class="tab-pane" id="pic-3"><%= image_tag @product.image_url, class: 'img-responsive' %></div>
              <div class="tab-pane" id="pic-4"><%= image_tag @product.image_url, class: 'img-responsive' %></div>
            </div>
            <ul class="preview-thumbnail nav nav-tabs">
              <li class="active"><a data-target="#pic-1" data-toggle="tab"><%= image_tag @product.image_url, class: 'img-responsive' %></a></li>
              <li><a data-target="#pic-2" data-toggle="tab"><%= image_tag @product.image_url, class: 'img-responsive' %></a></li>
              <li><a data-target="#pic-3" data-toggle="tab"><%= image_tag @product.image_url, class: 'img-responsive' %></a></li>
              <li><a data-target="#pic-4" data-toggle="tab"><%= image_tag @product.image_url, class: 'img-responsive' %></a></li>
            </ul>
          </div>

          <div class="details col-md-6">
            <div class="col-md-12">
            <h3 class="product-title"><%= @product.name %></h3>

            <p><strong>Average Rating:</strong>
      
              <span>Average rating   </span>
              <div id="average-rating" class="rated" data-score="<%= @product.average_rating %>"></div></p></div>
      
            <span class="product-description"><%= @product.description %></span>
            <span class="price">Current Price: <span>$<%= @product.price %>.00</span></span>
            <span class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>Write a review!</strong></span>
            <span class="price">Current Colors: <span><%= @product.color %></span></span>

            <div class="action">
             
              <button type="button" class="btn btn-default" data-toggle ="modal", data-target="#myModal">write a review</button></div>

      
          <div class="preview col-md-12">
            <p><strong>Here's what People are saying:</strong>
              <%= render 'comments' %></p>
               
                  <%= will_paginate @comments, class: "comment-pagination"%>
                </div>
            </div>
         
      </div>
    </div>
   <%= render partial: 'new_comment' %>